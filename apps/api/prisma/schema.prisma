generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String?
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  refreshTokens RefreshToken[]
  apiKeys       ApiKey[]
  images        Image[]
}

model RefreshToken {
  id        String   @id @default(cuid())
  hash      String   @unique
  userId    String
  expiresAt DateTime
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model ApiKey {
  id        String   @id @default(cuid())
  name      String
  tokenHash String   @unique
  userId    String
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  images Image[]

  @@index([userId])
}

model Image {
  id        String    @id @default(cuid())
  userId    String
  apiKeyId  String
  imgToken  String    @unique
  name      String
  mimeType  String
  size      Int
  deletedAt DateTime?
  createdAt DateTime  @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  apiKey ApiKey @relation(fields: [apiKeyId], references: [id], onDelete: Cascade)

  @@index([userId, apiKeyId])
}
