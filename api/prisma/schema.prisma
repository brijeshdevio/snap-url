generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String       @id @default(cuid())
  email        String?      @unique
  name         String?
  passwordHash String?
  avatarUrl    String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  authProvider AuthProvider @default(email)
  authId       String?

  sessions      Session[]
  projects      Project[]
  images        Image[]
}

model Session {
  id           String   @id @default(uuid())
  userId       String
  createdAt    DateTime @default(now())
  expiresAt    DateTime

  ipAddress    String?
  userAgent    String?

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  refreshTokens RefreshToken[]

  @@index([userId])
  @@index([expiresAt])
}

model RefreshToken {
  id           String   @id @default(uuid())
  tokenHash    String   @unique
  sessionId    String
  createdAt    DateTime @default(now())
  expiresAt    DateTime

  session      Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([expiresAt])
}

enum AuthProvider {
  email
  github
  google
}

model Project {
  id         String        @id @default(cuid())
  name       String
  keyHash    String        @unique
  revoked    Boolean       @default(false)
  revokedAt  DateTime?
  expiredAt  DateTime?
  lastUsedAt DateTime?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  status     ProjectStatus @default(active)
  usedCount  Int           @default(0)
  userId     String

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  images Image[]

  @@index([userId, name])
}

enum ProjectStatus {
  active
  revoked
  expired
}

model Image {
  id        String    @id @default(cuid())
  signKey   String    @unique
  storage   String    @unique
  name      String
  mimeType  String
  size      Int
  deletedAt DateTime?
  createdAt DateTime  @default(now())
  userId    String
  projectId String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([userId, projectId])
}
